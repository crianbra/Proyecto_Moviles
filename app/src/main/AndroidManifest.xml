<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.crianbra.proyecto_moviles">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="app.proyecto.crianbra.proyecto_moviles.EducApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name="app.proyecto.crianbra.proyecto_moviles.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="app.proyecto.crianbra.proyecto_moviles.CursosActivity"
            android:label="@string/title_activity_cursos"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity android:name="app.proyecto.crianbra.proyecto_moviles.MatematicaActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="app.proyecto.crianbra.proyecto_moviles.Matematica2Activity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:screenOrientation="portrait"/>
        <activity android:name="app.proyecto.crianbra.proyecto_moviles.IcpolActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="app.proyecto.crianbra.proyecto_moviles.CelcActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="app.proyecto.crianbra.proyecto_moviles.AsiriActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="app.proyecto.crianbra.proyecto_moviles.PerfilActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="app.proyecto.crianbra.proyecto_moviles.OnlineActivity"
            android:parentActivityName="app.proyecto.crianbra.proyecto_moviles.CursosActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="app.proyecto.crianbra.proyecto_moviles.CursosActivity" />
        </activity>
        >
        <activity android:name="app.proyecto.crianbra.proyecto_moviles.Mate2Activity"
            android:screenOrientation="portrait"/>
        <activity android:name="app.proyecto.crianbra.proyecto_moviles.QuizActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="app.proyecto.crianbra.proyecto_moviles.EntidadesActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="app.proyecto.crianbra.proyecto_moviles.CelcInfoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="app.proyecto.crianbra.proyecto_moviles.AsiriInfoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="app.proyecto.crianbra.proyecto_moviles.IcpolInfoActivity"
            android:screenOrientation="portrait"
            ></activity>
    </application>

</manifest>