<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.crianbra.proyecto_moviles">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="app.proyecto.crianbra.proyecto_moviles.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="app.proyecto.crianbra.proyecto_moviles.LoginActivity" />
        <activity android:name="app.proyecto.crianbra.proyecto_moviles.RegistroActivity" />
        <activity
            android:name="app.proyecto.crianbra.proyecto_moviles.CursosActivity"
            android:label="@string/title_activity_cursos"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="app.proyecto.crianbra.proyecto_moviles.MatematicaActivity" />
        <activity android:name="app.proyecto.crianbra.proyecto_moviles.FisicaActivity" />
        <activity android:name="app.proyecto.crianbra.proyecto_moviles.AlgebraActivity" />
        <activity android:name="app.proyecto.crianbra.proyecto_moviles.EstadisticaActivity" />
        <activity android:name="app.proyecto.crianbra.proyecto_moviles.Matematica2Activity" />
        <activity android:name="app.proyecto.crianbra.proyecto_moviles.MiPerfilActivity"></activity>

    </application>

</manifest>