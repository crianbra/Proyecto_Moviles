<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.crianbra.proyecto_moviles.PerfilFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

     <!--   <TextView
            android:id="@+id/txt_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mi Perfil"
            android:textColor="@color/colorPrimary"
            android:textSize="?attr/actionBarSize"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp" /> -->

        <TextView
            android:id="@+id/txt_nombre_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre Completo"
            android:textColor="@color/colorPrimary"
            android:textSize="?attr/dialogPreferredPadding"
            android:layout_marginTop="34dp"
            android:layout_alignLeft="@+id/edit_nombre_perfil"
            android:layout_alignStart="@+id/edit_nombre_perfil" />

        <EditText
            android:id="@+id/edit_nombre_perfil"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_below="@+id/txt_nombre_perfil"
            android:layout_centerHorizontal="true"
            android:background="@android:color/background_light"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txt_colegio_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_nombre_perfil"
            android:layout_alignStart="@+id/txt_nombre_perfil"
            android:layout_below="@+id/edit_nombre_perfil"
            android:text="Colegio o Institución"
            android:textColor="@color/colorPrimary"
            android:textSize="?attr/dialogPreferredPadding" />

        <EditText
            android:id="@+id/edit_colegio_perfil"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/edit_nombre_perfil"
            android:layout_alignStart="@+id/edit_nombre_perfil"
            android:layout_below="@+id/txt_colegio_perfil"
            android:background="@android:color/background_light"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txt_dire_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_colegio_perfil"
            android:layout_alignStart="@+id/txt_colegio_perfil"
            android:layout_below="@+id/edit_colegio_perfil"
            android:text="Ciudad"
            android:textColor="@color/colorPrimary"
            android:textSize="?attr/dialogPreferredPadding" />

        <EditText
            android:id="@+id/edit_dire_perfil"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_below="@+id/txt_dire_perfil"
            android:layout_centerHorizontal="true"
            android:background="@android:color/background_light"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txt_mail_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edit_dire_perfil"
            android:layout_alignStart="@+id/edit_dire_perfil"
            android:layout_below="@+id/edit_dire_perfil"
            android:text="E-Mail"
            android:textColor="@color/colorPrimary"
            android:textSize="?attr/dialogPreferredPadding" />

        <EditText
            android:id="@+id/edit_mail_perfil"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_below="@+id/txt_mail_perfil"
            android:layout_centerHorizontal="true"
            android:background="@android:color/background_light"
            android:ems="10"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/txt_contraseña_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edit_mail_perfil"
            android:layout_alignStart="@+id/edit_mail_perfil"
            android:layout_below="@+id/edit_mail_perfil"
            android:text="Contraseña"
            android:textColor="@color/colorPrimary"
            android:textSize="?attr/dialogPreferredPadding" />

        <EditText
            android:id="@+id/edit_contraseña_perfil"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/edit_mail_perfil"
            android:layout_alignStart="@+id/edit_mail_perfil"
            android:layout_below="@+id/txt_contraseña_perfil"
            android:background="@android:color/background_light"
            android:ems="10"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/txt_conf_contrasenia_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmar Contraseña"
            android:textColor="@color/colorPrimary"
            android:textSize="?attr/dialogPreferredPadding"
            android:layout_below="@+id/edit_contraseña_perfil"
            android:layout_alignLeft="@+id/edit_contraseña_perfil"
            android:layout_alignStart="@+id/edit_contraseña_perfil" />

        <EditText
            android:id="@+id/edit_conf_contrasenia_perfil"
            android:layout_width="270dp"
            android:layout_height="30dp"
            android:layout_below="@+id/txt_conf_contrasenia_perfil"
            android:layout_centerHorizontal="true"
            android:background="@android:color/background_light"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/btn_registar_perfil"
            android:layout_width="270dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@+id/edit_contraseña_perfil"
            android:layout_alignStart="@+id/edit_contraseña_perfil"
            android:layout_below="@+id/edit_contraseña_perfil"
            android:layout_marginTop="82dp"
            android:background="@color/colorPrimary"
            android:text="Registrar"
            android:textColor="@android:color/background_light"
            android:textSize="?attr/dialogPreferredPadding" />

    </RelativeLayout>

    </ScrollView>
</FrameLayout>
