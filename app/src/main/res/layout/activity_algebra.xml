<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context="app.proyecto.crianbra.proyecto_moviles.AlgebraActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/txt_algebra_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Algebra Lineal"
                android:textColor="@color/colorPrimary"
                android:textSize="?attr/listPreferredItemHeightSmall" />

            <com.google.android.youtube.player.YouTubePlayerView
                android:id="@+id/youtube_player_algebra"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#fff"
                android:layout_below="@+id/txt_algebra_1"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/texto_algebra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/youtube_player_algebra"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="Desarrollar las capacidades analíticas y el pensamiento lógico riguroso a través del estudio del álgebra lineal. Asimilar o manejar con fluidez los principales conceptos del álgebra lineal: espacios vectoriales, aplicaciones lineales, matrices, determinantes y sistemas de ecuaciones."
                android:textAlignment="gravity"
                android:textColor="@color/colorPrimary"
                android:textSize="?attr/dialogPreferredPadding"
                tools:layout_editor_absoluteX="57dp"
                tools:layout_editor_absoluteY="275dp" />


        </RelativeLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
