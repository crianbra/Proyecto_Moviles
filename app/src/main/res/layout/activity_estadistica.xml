<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context="com.example.crianbra.proyecto_moviles.EstadisticaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="4dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/txt_estadistica_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Estadística 1"
                android:textColor="@color/colorPrimary"
                android:textSize="?attr/listPreferredItemHeightSmall" />

            <com.google.android.youtube.player.YouTubePlayerView
                android:id="@+id/youtube_player_estadistica"
                android:layout_width="270dp"
                android:layout_height="230dp"
                android:background="#fff"
                android:layout_below="@+id/txt_estadistica_1"
                android:layout_alignLeft="@+id/texto_estadistica"
                android:layout_alignStart="@+id/texto_estadistica" />

            <TextView
                android:id="@+id/texto_estadistica"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:background="@color/colorPrimary"
                android:text="La estadística podría definirse como la ciencia que se encarga de recopilar, organizar, procesar, analizar e interpretar datos con el fin de deducir las características de una población objetivo, pero esta sería solo una visión estrecha de lo que comprende esta rama del saber."
                android:textAlignment="gravity"
                android:textColor="@android:color/background_light"
                android:textSize="?attr/dialogPreferredPadding"
                tools:layout_editor_absoluteX="69dp"
                tools:layout_editor_absoluteY="304dp"
                android:layout_below="@+id/youtube_player_estadistica"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>
