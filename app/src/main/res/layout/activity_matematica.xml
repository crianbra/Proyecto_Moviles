<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context="com.example.crianbra.proyecto_moviles.MatematicaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/txt_matematicas_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Matemáticas 1"
            android:textColor="@color/colorPrimary"
            android:textSize="?attr/listPreferredItemHeightSmall" />

        <TextView
            android:id="@+id/texto_matematica"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/youtube_player_matematicas"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:text="El objetivo inicial de esta asignatura es conseguir que los estudiantes de primer curso se hagan con los procedimientos prácticos básicos, que permiten la adaptación del estudio de las Matemáticas, en la Universidad."
            android:textAlignment="gravity"
            android:textColor="@color/colorPrimary"
            android:textSize="?attr/dialogPreferredPadding" />

        <com.google.android.youtube.player.YouTubePlayerView
            android:id="@+id/youtube_player_matematicas"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#fff"
            android:layout_below="@+id/txt_matematicas_1"
            android:layout_toStartOf="@+id/btn_flecha_matematica"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:id="@+id/btn_flecha_matematica"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/botonflecha"
            app:srcCompat="@drawable/botonflecha"
            android:layout_below="@+id/texto_matematica"
            android:layout_alignRight="@+id/texto_matematica"
            android:layout_alignEnd="@+id/texto_matematica"
            android:layout_marginTop="24dp" />


    </RelativeLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
